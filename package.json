{
  "name": "chat-app-backend",
  "version": "0.0.1",
  "description": "The backend for a real-time communicator app. Built using Socket.IO.",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json && tsc-alias -p tsconfig-build.json",
    "dev": "NODE_ENV=development infisical run --env=dev -- tsx watch ./src/index.ts",
    "dev-remote": "NODE_ENV=dev-remote infisical run --env=dev-remote -- tsx watch ./src/index.ts",
    "start": "NODE_ENV=production infisical run --env=prod -- node dist/index.js",
    "test": "NODE_ENV=test infisical run --env=test -- jest"
  },
